{pkgs, ...}: {
  imports = [
    ../common/base
    ../common/bundles/shell.nix
    ../common/bundles/code.nix
    ../common/bundles/creative-2d.nix
    ../common/bundles/creative-3d.nix
    ../common/bundles/cyber.nix
    ../common/environments/i3
    ../common/features/wezterm
    ../common/features/syncthing
  ];

  programs.autorandr = {
    enable = true;
    profiles = {
      "dual" = {
        fingerprint = {
          DP-3 = "";
          HDMI-1 = "";
        };
        config = {
          HDMI-1 = {
            enable = true;
            primary = true;
            mode = "1920x1080";
            rate = "180.00";
            position = "0x650";
          };
          DP-3 = {
            enable = true;
            mode = "1920x1080";
            rate = "100.00";
            position = "1920x0";
            rotate = "right";
          };
        };
      };
      "single" = {
        fingerprint = {
          HDMI-1 = "";
        };
        config = {
          HDMI-1 = {
            enable = true;
            mode = "1920x1080";
            rate = "180.00";
            position = "0x0";
          };
        };
      };
    };
  };
  
  home.packages = with pkgs; [
    brave
    firefox
    spotify
    vesktop
    obsidian
    onlyoffice-desktopeditors
    zoom-us
    qbittorrent
    mysql-workbench
    strawberry
    davinci-resolve
    vlc

    prismlauncher
    rpcs3

    yt-dlp
    spotdl
    rockbox-utility
  ];
}
