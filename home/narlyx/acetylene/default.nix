{pkgs, ...}: {
  imports = [
    ../common/base
    ../common/bundles/shell.nix
    ../common/bundles/code.nix
    ../common/environments/i3
    ../common/features/wezterm
    ../common/features/syncthing
  ];

  programs.autorandr = {
    enable = true;
    profiles = {
      "home" = {
        fingerprint = {
          DP-2 = "";
          HDMI-1 = "";
          HDMI-1-2 = "";
        };
        config = {
          DP-2 = {
            enable = true;
            primary = true;
            mode = "1920x1080";
            rate = "100.00";
            position = "0x650";
          };
          HDMI-1 = {
            enable = true;
            mode = "1920x1080";
            rate = "60.00";
            position = "1920x0";
            rotate = "right";
          };
          HDMI-1-2.enable = false;
        };
      };
    };
  };
  
  home.packages = with pkgs; [
    firefox
    spotify
    vesktop
    obsidian
    onlyoffice-desktopeditors
    zoom-us
    qbittorrent
    krita
    gimp
    freecad
    prusa-slicer
    mysql-workbench
    strawberry
    davinci-resolve
    vlc

    prismlauncher
    rpcs3

    spotdl
    rockbox-utility
  ];
}
